            <dependency id="Microsoft.Windows.ImplementationLibrary" version="1.0.*"/>
            -->
        </dependencies>
    </metadata>
    <files>
        <file src="Win32AppHelpers.targets" target="build\native\" />
        <file src="..\inc\**" target="inc\" />
    </files>
</package>
